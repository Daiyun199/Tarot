{
  "files": [],
  "compilerOptions": {
    "composite": true,
    "target": "esnext",                        // Chọn phiên bản ECMAScript mục tiêu
    "module": "commonjs",                      // Chọn kiểu module
    "strict": true,                            // Bật kiểm tra nghiêm ngặt
    "noUnusedLocals": false,                   // Tắt cảnh báo biến không sử dụng
    "noUnusedParameters": false,                // Tắt cảnh báo tham số không sử dụng
    "noImplicitAny": false,                    // Tắt cảnh báo về kiểu any
    "esModuleInterop": true,                   // Cho phép import/export giữa các module
    "skipLibCheck": true,                      // Bỏ qua kiểm tra loại của thư viện
    "forceConsistentCasingInFileNames": true   // Bắt buộc sử dụng chữ hoa/thường nhất quán
  },
  "include": [
    "src/**/*"                                  // Chỉ định các tệp nguồn cần biên dịch
  ],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ]
}
